<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../../Build/Common.props" />
  <Import Project="../../Build/TargetRuntimes.props" />
  <Import Project="../../Build/ProjectPackageReference.props" />

  <PropertyGroup>
    <AssemblyName>SmiteLib.Tests</AssemblyName>
    <EnableSmiteLibFramework>true</EnableSmiteLibFramework>
    <EnableSmiteLibEngine>true</EnableSmiteLibEngine>
    <EnableSmiteLibTestAdapter>true</EnableSmiteLibTestAdapter>
    <RunSettingsFilePath>$(MSBuildProjectDirectory)/../.runsettings</RunSettingsFilePath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="../**/*.cs" />
    <Compile Remove="../bin/**;../**/obj/**" />
    <Compile Remove="../CommandLineParserTests.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.11.0" />
    <PackageReference Include="NUnit" Version="3.13.2" />
    <PackageReference Include="NUnit3TestAdapter" Version="4.0.0" />
    <PackageReference Include="coverlet.collector" Version="3.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectPackageReference Include="../../SmiteLib-Package/SmiteLib-Package.csproj" />
    <ProjectReference Include="../../SmiteLib.Tests.TestProgram/PackageTests/SmiteLib.Tests.TestProgram.PackageTests.csproj" SetTargetFramework=""/>
  </ItemGroup>

  <Import Project="../../Build/ProjectPackageReference.targets" />

</Project>

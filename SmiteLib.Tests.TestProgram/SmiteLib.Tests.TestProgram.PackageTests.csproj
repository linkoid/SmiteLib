<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../Build/Common.props" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>SmiteLib.Tests.TestProgram</AssemblyName>
    
    <BaseOutputPath>packageTests/bin/</BaseOutputPath>
    <BaseIntermediateOutputPath>packageTests/obj/</BaseIntermediateOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="bin/**;obj/**" />
    <None Remove="bin/**;obj/**" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="SmiteLib.Tests" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="$(PackageIdPrefix)SmiteLib.Injection" Version="$(Version)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../SmiteLib.Injection/SmiteLib.Injection.csproj" Private="true" PrivateAssets="all">
      <Targets>Pack;PublishLocal</Targets>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

</Project>

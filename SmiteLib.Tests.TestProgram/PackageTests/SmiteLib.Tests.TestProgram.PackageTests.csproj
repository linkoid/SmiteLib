<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../../Build/Common.props" />
  <Import Project="../../Build/TargetRuntimes.props" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>SmiteLib.Tests.TestProgram</AssemblyName>
    <ProduceReferenceAssembly>False</ProduceReferenceAssembly>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="../**/*.cs" />
    <Compile Remove="../bin/**;../**/obj/**" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="SmiteLib.Tests" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="$(PackageIdPrefix)SmiteLib.Injection" Version="$(Version)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../SmiteLib.Injection/SmiteLib.Injection.csproj" Private="true" PrivateAssets="All">
      <Targets>PublishLocal</Targets>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

</Project>

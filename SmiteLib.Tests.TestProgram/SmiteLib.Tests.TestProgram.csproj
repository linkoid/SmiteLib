<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../Build/Common.props" />
  
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="SmiteLib.Tests" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="packageTests/**" />
    <Compile Remove="packageTests/**" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../SmiteLib/SmiteLib.csproj" />
    <ProjectReference Include="../SmiteLib.Injection/SmiteLib.Injection.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(DesignTimeBuild)' == 'true'">
    <ProjectReference Include="../SmiteLib/SmiteLib.csproj" />
    <ProjectReference Include="../SmiteLib.Core/SmiteLib.Core.csproj" />
    <ProjectReference Include="../SmiteLib.Injection/SmiteLib.Injection.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(DesignTimeBuild)' != 'true'">
    <ProjectReference Include="../SmiteLib/SmiteLib.csproj" />
    <ProjectReference Include="../SmiteLib.Injection/SmiteLib.Injection.csproj" />
  </ItemGroup>

</Project>

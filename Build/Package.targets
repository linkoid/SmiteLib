<Project>
  <ItemGroup>
    <None Include="@(Build)">
      <Link>%(PackagePath)</Link>
    </None>
    <None Update="Build/$(MSBuildProjectName).*">
      <Link></Link>
      <PackagePath>build/$(PackageId)%(Extension)</PackagePath>
    </None>
  </ItemGroup>

  <PropertyGroup>
    <TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage</TargetsForTfmSpecificBuildOutput>
  </PropertyGroup>
  <Target Name="CopyProjectReferencesToPackage" DependsOnTargets="BuildOnlySettings;ResolveReferences" >
    <ItemGroup>
      <_ProjectReferenceCopyLocalPaths Include="@(ReferenceCopyLocalPaths->WithMetadataValue('ReferenceSourceTarget', 'ProjectReference'))"/>
    </ItemGroup>
    <ItemGroup>
      <BuildOutputInPackage Include="@(_ProjectReferenceCopyLocalPaths->WithMetadataValue('Extension', '.dll'))" TargetPath="%(_ProjectReferenceCopyLocalPaths.DestinationSubDirectory)" />
      <BuildOutputInPackage Include="@(_ProjectReferenceCopyLocalPaths->WithMetadataValue('Extension', '.exe'))" TargetPath="%(_ProjectReferenceCopyLocalPaths.DestinationSubDirectory)" />
      <_TargetPathsToSymbolsWithTfm Include="@(_ProjectReferenceCopyLocalPaths->WithMetadataValue('Extension', '.pdb'))" TargetPath="%(_ProjectReferenceCopyLocalPaths.DestinationSubDirectory)" TargetFramework="$(TargetFramework)" />
      <_TargetPathsToSymbolsWithTfm Include="@(_ProjectReferenceCopyLocalPaths->WithMetadataValue('Extension', '.mdb'))" TargetPath="%(_ProjectReferenceCopyLocalPaths.DestinationSubDirectory)" TargetFramework="$(TargetFramework)" />
    </ItemGroup>
  </Target>

  <Target Name="PublishLocal" DependsOnTargets="Pack" AfterTargets="Pack">
    <PropertyGroup>
      <PackagePath>$(OutputPath)../$(PackageId).$(PackageVersion).nupkg</PackagePath>
      <PackageSource>%USERPROFILE%/.nuget/packages</PackageSource>
    </PropertyGroup>
    <Exec Command="NuGet delete $(PackageId) $(PackageVersion) -Source $(PackageSource) -NonInteractive" ContinueOnError="true" />
    <Exec Command="NuGet add $(PackagePath) -Source $(PackageSource) -Expand -NonInteractive" />
  </Target>
</Project>
